<% content_for :right_side do %>
<div class="card wow fadeInRight" data-wow-delay="0.3s">
    <div class="card-body">
        <!--Header-->
        <div class="text-center">
            <h3 class="white-text"><i class="fa fa-user white-text"></i> Edit Profile:</h3>
            <hr>
        </div>
        <%= render "styled_form" %>
        <% if @user == current_user %>
        <p>Remove your account? <%= link_to "Delete", @user, method: :delete,
                                data: { confirm: "Are you sure?" }%></p>
        <% end %>
      </div>
  </div>
<% end %>
