<div class="container">
  <h1 id="all-recipes-title">All Recipes</h1>
    <% if @recipes.blank? %>
    <h4>There are no recipes containing the term <%= params[:search] %>.</h4>
    <% end %>
    <ul id="recipes-list">
    <% @recipes.each do |recipe| %>
      <li class="recipe-list"><%= link_to recipe.name, recipe, :class => "dk-link"%></li>
    <% end %>
    </ul>
    <p><%= link_to "Submit a recipe", new_recipe_path %></p>
</div>
