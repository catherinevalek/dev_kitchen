<div class="recipe-show container">
  <h1><%= @recipe.category.name %></h1>
  <h2><%= @recipe.name %></h2>
  <h2>Submitted by: <%= @recipe.user.username %></h2>
  <p>Difficulty level: <%= @recipe.difficulty %></p>
  <p>Prep time: <%= @recipe.prep_time %></p>
  <p>Ingredients:</p>
  <ul>
    <% @recipe.parse_ingredients.each do |ingredient| %>
      <li><%= ingredient %></li>
    <% end %>
  </ul>

  <p>Directions: <%= @recipe.directions %></p>
  <% if logged_in? && current_user == @recipe.user %>
    <p><%= link_to "Edit this recipe", edit_recipe_path(@recipe.id) %></p>
  <% end %>
  <!-- <p><#%= link_to "All recipes", recipes_path %></p> -->
</div>
